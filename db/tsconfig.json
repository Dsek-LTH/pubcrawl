{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "out",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "out", ".env"]
}
