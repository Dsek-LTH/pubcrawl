{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "tasks": {
    "dev": "deno run -A --unstable-kv npm:vite",
    "build": "deno run -A --unstable-kv npm:vite build",
    "preview": "deno run -A --unstable-kv npm:vite preview",
    "serve": "deno run -A --unstable-kv build/index.js"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@kitsonk/kv-toolbox": "jsr:@kitsonk/kv-toolbox@^0.27.4",
    "@sveltejs/adapter-node": "npm:@sveltejs/adapter-node@^5.2.12",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.20.4",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.3",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.3",
    "daisyui": "npm:daisyui@^5.0.15",
    "svelte": "npm:svelte@^5.25.8",
    "sveltekit-sse": "npm:sveltekit-sse@^0.13.16",
    "tailwindcss": "npm:tailwindcss@^4.1.3",
    "vite": "npm:vite@^6.2.5",
    "zod": "npm:zod@^3.24.2"
  },
  "exclude": [".svelte-kit/"],
  "nodeModulesDir": "auto"
}
